<div id="dialog-form">
    <div id="containerForm">
        <div id="div_titulo" class="div_row">
            <h3 id="titulo"></h3>
            <label id="subtitulo"></label>
        </div>
    </div>
</div>

<div id="loading">
    <div id="loading-circle">
        <label>Carregando...</label>
    </div>
</div>

<script defer>
    function showLoading() {
        document.getElementById("loading").style.display = "flex"
    }

    function hideLoading() {
        document.getElementById("loading").style.display = "none"
    }

    function addButton(command) {
        const mydiv = document.createElement("div")
        mydiv.className = "div_row"

        const mybutton = document.createElement("button")
        mybutton.addEventListener("click", () => window.location.href = encodeURI(command.link))
        mybutton.textContent = command.label

        if (command.id) mybutton.id = command.id

        mydiv.appendChild(mybutton)
        return mydiv
    }

    function addFileButton(command) {
        const mydiv = document.createElement("div")
        mydiv.className = "div_row"

        const mybutton = document.createElement("button")
        mybutton.textContent = command.label
        mybutton.type = "button"

        if (command.id) mybutton.id = command.id

        mybutton.addEventListener("click", () => {
            window.location.href = encodeURI(`${window.location.pathname}/${command.name}`)
            //$("#inputFolder").prop("value", command.name)
            //document.getElementById("containerForm").submit()
        })

        mydiv.appendChild(mybutton)
        return mydiv
    }

    function onReceiveData(data, folder) {        
        const files = data.files

        $("#titulo").html(folder)
        $("#subtitulo").html(files.length.toString() + ' arquivo(s)')

        const divPai = document.getElementById("containerForm")

        if (files.length == 0) {
            divPai.appendChild(addButton({ label: "Enviar Arquivos", link: "/upload", id: "btnCommand" }))
            divPai.appendChild(addButton({ label: "Voltar", link: "/view", id: "btnCommand" }))
            return;
        }

        files.forEach(name => {
            divPai.appendChild(addFileButton({ label: name, name: name }))
        })

        divPai.appendChild(addButton({ label: "Voltar", link: "/view", id: "btnCommand" }))
    }

    function onError(data, folder) {
        if (data.status == 404) {
            $("#titulo").html("Pasta nÃ£o Encontrada")
            $("#subtitulo").html(folder)
            hideLoading()
            return;
        }

        $("#titulo").html("Erro Desconhecido")
        $("#subtitulo").html(data.responseJSON ? data.responseJSON.error : data.error)
    }

    window.onload = () => {
        showLoading()

        let folder = "{{folder}}"

        $.ajax({
            url: "/api/list",
            type: "POST",
            data: { folder },
            success: function (data) {
                onReceiveData(data, folder)
                hideLoading()
            },
            error: function (data) {
                onError(data, folder)
                hideLoading()
            },
        })
    }
</script>

