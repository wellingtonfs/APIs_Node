<div id="dialog-form">
    <div id="containerForm">
        <h3 id="titulo">Carregando...</h3>
    </div>
</div>

<script defer>
    function addButton(command) {
        const mydiv = document.createElement("div")
        mydiv.className = "div_row"

        const mybutton = document.createElement("button")
        mybutton.textContent = command.label
        mybutton.type = "button"

        if (command.id) mybutton.id = command.id

        mybutton.addEventListener("click", () => window.location.href = command.link)

        mydiv.appendChild(mybutton)
        return mydiv
    }

    function addFileButton(command) {
        const mydiv = document.createElement("div")
        mydiv.className = "div_row"

        const mybutton = document.createElement("button")
        mybutton.textContent = command.label
        mybutton.type = "button"

        if (command.id) mybutton.id = command.id

        mybutton.addEventListener("click", () => {
            $("#inputFolder").prop("value", command.name)
            document.getElementById("containerForm").submit()
        })

        mydiv.appendChild(mybutton)
        return mydiv
    }

    function onReceiveData(data) {
        const folders = data.folders
        const divPai = document.getElementById("containerForm")

        if (folders.length == 0) {
            $("#titulo").html("Nenhuma pasta encontrada")
            divPai.appendChild(addButton({ label: "Criar Pasta", link: "/push/criar_pasta", id: "btnCommand" }))
            addGoBackButton("containerForm", "/")
            return;
        }

        $("#titulo").html("Em qual pasta seu arquivo estÃ¡?")

        folders.forEach(name => {
            divPai.appendChild(addFileButton({ label: name, name: name }))
        })

        addGoBackButton("containerForm", "/")
    }

    window.onload = () => {
        showLoading()

        $.ajax({
            url: "/api/list",
            type: "GET",
            success: function (data) {
                onReceiveData(data)
                hideLoading()
            },
            error: function (data) {
                hideLoading()
                alert((data.responseJSON ? data.responseJSON.error : data.error))
            },
        })
    }
</script>

