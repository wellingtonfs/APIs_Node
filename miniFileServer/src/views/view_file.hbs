<div id="dialog-form">
    <div id="containerForm">
        <h3 id="titulo">Detalhes do Arquivo</h3>

        <div class="div_row">
            <div class="div_dialog_label">
                <label>Nome</label>
            </div>
            <div class="div_info_field">
                <label id="label_filename">Carregando...</label>
            </div>
        </div>

        <div class="div_row">
            <div class="div_dialog_label">
                <label>Tamanho</label>
            </div>
            <div class="div_info_field">
                <label id="label_size">Carregando...</label>
            </div>
        </div>

        <div class="div_row">
            <div class="div_dialog_label">
                <label>Data</label>
            </div>
            <div class="div_info_field">
                <label id="label_time">Carregando...</label>
            </div>
        </div>

        <div class="div_row">
            <div class="div_dialog_label">
                <label>Endereço</label>
            </div>
            <div class="div_info_field">
                <label id="label_link">Carregando...</label>
            </div>
        </div>

        <div class="div_row">
            <button id="btnView">Visualizar</button>
        </div>

        <div class="div_row">
            <button id="btnDownload">Baixar o Arquivo</button>
        </div>
    </div>
</div>

<script defer>
    function onReceiveData(data) {
        let date = data.mtime.slice(0, data.mtime.lastIndexOf(':'))
        let url = window.location.origin + data.url

        $("#label_filename").html(data.name)
        $("#label_size").html(data.sizeStr)
        $("#label_time").html(date)
        $("#label_link").html(url)

        $("#btnView").click(() => {
            let url = `/api/services/view/${data.folder}/${data.name}`

            window.open(encodeURI(url))
        })

        $("#btnDownload").click(() => {
            let url = `/api/services/get/${data.folder}/${data.name}`

            window.location.href = encodeURI(url)
        })
    }

    function onError(data) {
        if (data.status == 404) {
            $("#titulo").html("Arquivo não Encontrado")
        } else {
            $("#titulo").html("Erro Desconhecido")
        }

        document.querySelectorAll(".div_row").forEach(
            el => el.style.display = "none"
        )

        document.getElementById("containerForm").style.justifyContent = "center"
    }

    $("#btnVoltar").click(() => {
        if (document.referrer) return window.location.href = document.referrer
        window.location.href = "/"
    })

    window.onload = () => {
        let folder = "{{folder}}"
        let file = "{{file}}"

        addGoBackButton("containerForm", encodeURI(`/view/${folder}`))

        $.ajax({
            url: "/api/files/list",
            type: "POST",
            data: { folder, file },
            success: function (data) {
                onReceiveData(data)
                hideLoading()
            },
            error: function (data) {
                onError(data)
                hideLoading()
            },
        })
    }
</script>

